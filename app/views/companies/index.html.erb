<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<%= link_to 'New Company', new_company_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<br>
<br>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Company Name</th>
      <th scope="col">Editar Compañía</th>
      <th scope="col"># of Employees</th>
      <th scope="col">Delete Company?</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @companies.each do |company| %>
      <th scope="row">1</th>
      <td><%= link_to company.name, company %></td>
      <td><%= link_to 'Edit', edit_company_path(company) %></td>
      <td><%= company.employees.count %></td>
      <td><%= link_to 'Yes', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
